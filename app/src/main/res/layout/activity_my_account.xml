<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/potrait_area"
            android:layout_height="250dp"
            android:layout_width="match_parent"
            android:background="@drawable/orange"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/orange"/>

            <Button
                android:id="@+id/potrait"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/portrait"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/potrait"
                android:layout_marginTop="10dp"
                android:text="Upload Photo"/>
        </RelativeLayout>

    <ListView
        android:id="@+id/info_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/potrait_area"
        android:layout_marginTop="0dp"
        android:background="@drawable/orange2"
        />
    </RelativeLayout>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:text="testing"
        android:layout_gravity='start'
        android:background="#FFF"/>


</android.support.v4.widget.DrawerLayout>
